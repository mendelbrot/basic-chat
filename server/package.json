{
  "name": "basic-chat",
  "version": "1.0.0",
  "description": "",
  "main": "dist/src/main.js",
  "scripts": {
    "build": "rimraf dist && npx tsc",
    "prestart": "npm run build",
    "start": "node dist/src/main.js",
    "db:dev:rm": "docker compose -f docker-compose.dev.yml down -v",
    "db:dev:up": "docker compose -f docker-compose.dev.yml up -d",
    "db:dev:migrate": "npx sequelize-cli db:migrate --env dev",
    "db:dev:seed": "npx sequelize-cli db:seed:all --env dev",
    "db:dev:restart": "npm run db:dev:rm ; sleep 1 ; npm run db:dev:up && sleep 1 && npm run db:dev:migrate && npm run db:dev:seed",
    "db:test:rm": "docker compose -f docker-compose.test.yml down -v",
    "db:test:up": "docker compose -f docker-compose.test.yml up -d",
    "db:test:migrate": "npx sequelize-cli db:migrate --env test",
    "db:test:seed": "npx sequelize-cli db:seed:all --env test",
    "db:test:seed:undo": "npx sequelize-cli db:seed:undo:all --env test",
    "db:test:restart": "npm run db:test:rm ; sleep 1 ; npm run db:test:up && sleep 1 && npm run db:test:migrate && npm run db:test:seed",
    "predev": "npm run build",
    "dev": "dotenv -f .env.dev run concurrently \"npx tsc -w\" \"nodemon dist/src/main.js\"",
    "pretest": "npm run build && npm run db:test:seed:undo && npm run db:test:seed",
    "test": "dotenv -f .env.test run mocha --exit \"./dist/test/**/*.test.js\""
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@types/chai": "^4.3.6",
    "@types/mocha": "^10.0.2",
    "@types/supertest": "^2.0.14",
    "bcrypt": "^5.1.1",
    "chai": "^4.3.10",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "jsonwebtoken": "^9.0.2",
    "mocha": "^10.2.0",
    "pg": "^8.11.3",
    "sequelize": "^6.33.0",
    "supertest": "^6.3.3"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.0",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.18",
    "@types/jsonwebtoken": "^9.0.3",
    "@types/node": "^20.8.3",
    "concurrently": "^8.2.1",
    "nodemon": "^3.0.1",
    "rimraf": "^5.0.5",
    "sequelize-cli": "^6.6.1",
    "typescript": "^5.2.2"
  }
}
