    "@types/chai": "^4.3.6",
    "@types/mocha": "^10.0.2",
    "@types/supertest": "^2.0.14",
    "chai": "^4.3.10",
    "express": "^4.18.2",
    "mocha": "^10.2.0",
    "pg": "^8.11.3",
    "sequelize": "^6.33.0",
    "supertest": "^6.3.3"
  },
  "devDependencies": {
    "@types/express": "^4.17.18",
    "@types/node": "^20.8.3",
    "concurrently": "^8.2.1",
    "nodemon": "^3.0.1",
    "rimraf": "^5.0.5",
    "typescript": "^5.2.2"
  }
