{
  "name": "basic-chat",
  "version": "1.0.0",
  "description": "",
  "main": "dist/index.js",
  "scripts": {
    "build": "rimraf dist && npx tsc",
    "prestart": "npm run build",
    "start": "node dist/index.js",
    "predev": "npm run build",
    "dev": "concurrently \"npx tsc -w\"  \"nodemon dist/index.js\"",
    "pretest": "npm run build",
    "test": "mocha \"./dist/test/**/*.test.js\" --recursive",
    "pretest:watch": "npm run build",
    "test:watch": "concurrently \"npx tsc -w\" \"mocha \"./dist/test/**/*.test.js\" --recursive --watch \"",
    "db:dev:rm": "docker compose rm devpg -s -f -v",
    "db:dev:up": "docker compose up devpg -d",
    "db:test:rm": "docker compose rm testpg -s -f -v",
    "db:test:up": "docker compose up testpg -d",
    "db:seed": "",
    "db:dev:restart": "npm run db:dev:rm && npm run db:dev:up && sleep 1 && yarn prisma:dev:deploy && sleep 1 && yarn prisma:dev:makeuser",
    "prisma:test:deploy": "dotenv -e .env.test -- npx prisma migrate deploy",
    "db:test:restart": "yarn db:test:rm && yarn db:test:up && sleep 1 && yarn prisma:test:deploy"
  },
  "author": "",
